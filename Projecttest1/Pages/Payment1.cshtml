@page
@model Projecttest1.Pages.Payment1Model
@{
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Autism Foundation</title>
    <!-- Main Stylesheet File -->
    <link href="~/css/payment1.css" rel="stylesheet">
</head>

<body>

    <div class="container">
        <div class="card">
            <button class="proceed">
                <svg class="sendicon" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"></path>
                </svg>
            </button>
            <img src="https://seeklogo.com/images/V/VISA-logo-62D5B26FE1-seeklogo.com.png" class="logo-card">
            <label>Card number:</label>
            <input id="user" type="text" class="input cardnumber" placeholder="1234 5678 9101 1121">
            <label>Name:</label>
            <input class="input name" placeholder="Edgar Pérez">
            <label class="toleft">CCV:</label>
            <input class="input toleft ccv" placeholder="321">
        </div>
        <div class="receipt">
            <div class="col">
                <p>Cost:</p>
                <h2 class="cost">RM 150 </h2><br>
                <p>Name:</p>
                <h2 class="seller">Courses | 3 hours </h2>
            </div>
            <div class="col">
                <br><br>
                <p>This course will be attend for 3 hours via online with assist by Ms Sabs</p>
            </div><br><br><br>
            <p class="comprobe">This information will be sended to your email</p>
        </div>
    </div>
</body>
</html>